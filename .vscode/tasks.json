{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      // enable logging output
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": true // DO NOT close powershell after completition
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}\\build\\App\\SynthEngine_artefacts\\Debug\\SynthEngine.exe",
      // "command": "taskkill /IM SynthEngine.exe /F & ${workspaceFolder}\\build\\App\\SynthEngine_artefacts\\Debug\\SynthEngine.exe",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },
    {
      "label": "Build and Run",
      "type": "shell",
      "command": "cmake --build build & ${workspaceFolder}\\build\\App\\SynthEngine_artefacts\\Debug\\SynthEngine.exe",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },{
      "label": "Build and Test",
      "type": "shell",
      "command": "cmake --build build & ${workspaceFolder}\\build\\PureTest\\Debug\\PureTest.exe",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    }
  ]
}
